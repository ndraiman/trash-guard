{
  "description": "Block dangerous rm commands and suggest using trash CLI",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/trash-guard.sh"
          }
        ]
      }
    ]
  }
}
